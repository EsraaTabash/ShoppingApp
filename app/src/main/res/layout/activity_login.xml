<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/loginProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:indeterminate="false"
        android:max="100"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/containerWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginProgress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/loginCircle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/circle_login"
            android:text="Login"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:elevation="8dp" />

        <LinearLayout
            android:id="@+id/orangeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/container_rounded_orange"
            android:layout_marginTop="75dp"
            android:elevation="4dp"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="12dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/edittext_rounded" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="12dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/edittext_rounded" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login"
                android:backgroundTint="#F6A943"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-condensed-medium"
                android:elevation="4dp"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Create Account"
                android:backgroundTint="#FFFFFF"
                android:textColor="#F6A943"
                android:fontFamily="sans-serif-condensed-medium"
                android:elevation="2dp"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
