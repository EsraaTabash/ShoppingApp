<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Most Ordered Product"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvMostOrderedEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لا توجد طلبات بعد"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"
                android:padding="8dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMostOrdered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                android:elevation="6dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/mo_item_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mo_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/mo_item_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/mo_item_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Short description..."
                            android:textSize="13sp"
                            android:textColor="@android:color/darker_gray"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/mo_item_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/mo_item_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★ 0.0"
                                android:textSize="14.5sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_orange_dark"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/mo_item_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x0"
                                android:textSize="14.5sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_500" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Most Rated Product"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvTopRatedEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Product With 5 rate"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"
                android:padding="8dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTopRated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                android:elevation="6dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/tr_item_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tr_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tr_item_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tr_item_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Short description..."
                            android:textSize="13sp"
                            android:textColor="@android:color/darker_gray"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tr_item_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_green_dark" />

                        <TextView
                            android:id="@+id/tr_item_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="★ 0.0"
                            android:textSize="14.5sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_orange_dark"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
